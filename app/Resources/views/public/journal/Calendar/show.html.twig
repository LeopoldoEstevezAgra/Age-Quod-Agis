{% extends 'base.html.twig' %}

{% block body %}
    <h1>Event</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ event.title }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ event.comment }}</td>
            </tr>
            <tr>
                <th>Starts</th>
                <td>{% if event.starts %}{{ event.starts|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Ends</th>
                <td>{% if event.ends %}{{ event.ends|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ event.color }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('gestion_event_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('gestion_event_edit', { 'id': event.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
