

{% extends "public/journal/base.html.twig" %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('build/css/journal/index.css')}}">

{% endblock %}

{% block sectionTitle %}
    Month Activity Log 
{% endblock %}

{% block body %}

    <div class="row justify-content-center">
        <div  name="box" class="col-10 col-lg-5 box">
            <div id ="activitybox">
                {% include "public/journal/activityLog/activityBox.html.twig" %}
            </div>
        
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).on('click','#day_unit_ajax',function(e){
            dayUnitAmount= $('#day_unit_amount').val()
            dayUnitType= $('#day_unit_type').val()

            $.ajax({
                url:'/activityLog/',
                type:'post',
                data:{
                    dayUnitAmount,
                    dayUnitType
                },
                dataType: 'json',
                async: true,
                success: function(data, status){
                    $('#activitybox').html(data['html'])
                    jQuery('#day_task_description').val('')

                },
                error: function(xhr, textStatus, errorThrown){
                    console.error('Ajax request failed')

                }

            })
            return false;

        })

    </script>


{% endblock %}
