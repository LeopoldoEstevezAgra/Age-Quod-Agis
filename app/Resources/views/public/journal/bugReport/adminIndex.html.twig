{% extends 'public/journal/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <style>
table, th, td {
    border: 1px solid black;
    border-collapse: collapse;
}
th, td {
    padding: 15px;
}
    </style>
{% endblock %}

{% block body %}
    <table class="width-100 table" >
        <thead class="thead-dark" >
            <tr>
                <th>Title</th> 
                <th>Screen</th> 
                <th>Description</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            {% for bug in bugs %}
                <tr>
                    <td>
                        {{ bug.title }}
                    </td>
                    <td>
                        {{ bug.screen }}
                    </td>
                    <td>
                        {{ bug.description }}
                    </td>
                    <td class="text-center" style="width: 10px;">
                        {% if bug.imageName %}
                            <img src="{{ vich_uploader_asset(bug, 'imageFile') }}" alt="" />
                        {% endif %}
                    </td>
                </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

{% endblock %}
