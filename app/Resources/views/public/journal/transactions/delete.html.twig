{% extends 'public/journal/base.html.twig' %}

{% block heading_title %}
    {% trans %}Delete Event{% endtrans %}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-4 col-md-offset-4 text-center center">
            <h2 class="text-danger mg-top-30">{% trans %}Delete transaction{% endtrans %}</h2>
            {% trans %}This transaction will be removed{% endtrans %}
            {{ form_start(form) }}
            <button type="submit" class="btn btn-danger mg-top-30">
                <span class="fa fa-trash"></span>
                {% trans %}Delete{% endtrans %}
            </button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}