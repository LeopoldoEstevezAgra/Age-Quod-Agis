<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Age quod agis{% endblock %}</title>

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link rel="stylesheet" href="{{asset('bootstrap/css/bootstrap.min.css')}}">
    <link rel="stylesheet" href="{{asset('css/baseStyles.css')}}">
    <link rel="stylesheet" href="{{asset('css/journal/baseStyles.css')}}">

    {% block stylesheets %}
    {% endblock %}

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>

<body>
    <div id="mySidebar" class="sidebar">
        <a href="#">Index</a>
        <a class="logout-button" href="{{path('logout')}}">Logout</a>

    </div>

    <div id="main">
        <button id="myBtn" class="openbtn " onclick="toggleNav()">â˜°</button>
        <div class="container-fluid height-100">
            <h2 class="title-main">Lorem, ipsum.</h2>
            <hr>
            {% block body %}
            {% include "journal/index.html.twig" %}
            {% endblock %}

        </div>
    </div>
    {% block javascripts %}
    {% endblock %}
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="{{asset('bootstrap/js/bootstrap.min.js')}}" />
    <script src="{{asset('js/journal/baseJS.js')}}" ></script>

    <script>

        function toggleNav() {
            navSize = document.getElementById("mySidebar").style.width;

            if (navSize == '250px') {
                return close();
            }
            return open();
        }
        function open() {
            mainSize = document.getElementById("main").style.width;
            elements = document.getElementsByClassName("box");

            document.getElementById("mySidebar").style.width = "250px";
            document.getElementById("myBtn").style.marginLeft = "250px";
            document.body.style.backgroundColor = "rgba(0,0,0,0.4)";

            for (var i = 0; i < elements.length; i++) {
                elements[i].style.backgroundColor = "#c0c0c0";
            }

        }
        function close() {
            elements = document.getElementsByClassName("box");

            document.getElementById("mySidebar").style.width = "0";
            document.getElementById("myBtn").style.marginLeft = "0";
            document.body.style.backgroundColor = "#e7e7e7";

            for (var i = 0; i < elements.length; i++) {
                elements[i].style.backgroundColor = "#efefef";
            }
        }
    </script>
</body>

</html>