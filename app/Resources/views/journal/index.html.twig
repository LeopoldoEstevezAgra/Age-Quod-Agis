{% extends "journal/base.html.twig" %}
{% block stylesheets %}
<link rel="stylesheet" href="{{asset('css/journal/index.css')}}">

{% endblock %}
{% block body %}

<div class="row justify-content-center">
        <div name="box" class="col-10 col-lg-5 box">
                <div class="box-content">
                        <ul>
                                {% for mTask in monthTasks %}
                                <li>
                                    <p></p>    
                                    <p>{{mTask.description}}</p>    
                                </li>
                                        
                                {% endfor %}
                        </ul>
                </div>
                <div class="box-add-task">
                        {{form_start(formMonth)}}
                        {{form_widget(formMonth.description,{'attr':{'class':'task-description'}})}}
                        {{form_widget(formMonth.submit)}}
                        {{form_end(formMonth)}}

                </div>
        </div>

        <div name="box" class="col-10 col-lg-5 box">
                <div class="box-content">
                </div>
                <div class="box-add-task">
                        {{form_start(formDay)}}
                        {{form_widget(formDay.description,{'attr':{'class':'task-description'}})}}
                        {{form_widget(formDay.submit)}}
                        {{form_end(formDay)}}

                </div>

        </div>
</div>


{% endblock %}